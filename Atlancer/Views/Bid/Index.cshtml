@model BidViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bidding | Atlancer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;1,100&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container-fluid" style="max-width: 1320px">
                <div class="w-100 d-flex justify-content-between align-items-center">
                    <img class="img-fluid p-3" width="200px" src="~/images/logo-01-01.png" />

                    <div class="d-flex align-items-center">

                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                    asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                    asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>

                        <!--Search input field-->

                        <div class="Icon-inside">
                            <input type="text" placeholder="Search" class="search-input">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </div>

                        <div class="d-flex align-items-center">
                            @if (ViewBag.UserType == "Freelancer")
                            {
                                <a style="display: flex; text-decoration: none" asp-controller="Freelancer"
                                asp-action="Index" asp-route-id=@ViewBag.UserId>
                                    <img src="~/images/avatar.png" alt="Avatar" class="avatar" />
                                    <p style="color: #000; font-weight: 500" class="align-self-center mb-0 pr-1">
                                        @ViewBag.UserName
                                    </p>
                                </a>
                            }
                            else
                            {
                                <a style="display: flex; text-decoration: none" asp-controller="Client" asp-action="Index"
                                asp-route-id=@ViewBag.UserId>
                                    <img src="~/images/avatar.png" alt="Avatar" class="avatar" />
                                    <p style="color: #000; font-weight: 500" class="align-self-center mb-0 pr-1">
                                        @ViewBag.UserName
                                    </p>
                                </a>
                            }
                        </div>
                    </div>
                </div>

                <!--
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                -->
            </div>
        </nav>
        <hr style="width: 1320px; margin: auto" class="text-center" />

        <div class="mt-3" style="display: block; margin: auto">
            <ul class="d-flex footer_items justify-content-center">
                <li><a asp-controller="" asp-action="" class="p-2 services_link">Development & IT</a></li>
                <li><a href="" class="p-2 services_link">Design & Creative</a></li>
                <li><a href="" class="p-2 services_link">Sales & Marketing</a></li>
                <li><a href="" class="p-2 services_link">Writing & Translation</a></li>
                <li><a href="" class="p-2 services_link">Engineering & Architecture</a></li>

            </ul>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <section class="section">
                <div class="d-flex row m-0" style="width: 100%">
                    <div class="col-4">
                        <div class="profile_details d-flex align-items-center flex-column"
                            style="padding: 0 10px 5px 10px">

                            <div class="card w-100" style="border: none">
                                <div class="card-body">
                                    <p class="card-title"
                                        style="font-size: 20px; font-weight: 500; margin-bottom: 20px">
                                        @Model.Project.ProjectName
                                    </p>

                                    <div class="d-flex w-100 mb-0 mt-3">
                                        <div style="margin-right: auto" class="d-flex">
                                            <i class="fa fa-list-ul" style="color: #0d6efd; margin-top: 3px" aria-hidden="true"></i>
                                            <p style="margin-left: 8px; font-weight: 400; color: #62646a">
                                                Category
                                            </p>
                                        </div>
                                        <div>
                                            <p style="color: #62646a">
                                                <strong style="font-weight: 500">@Model.Project.Category</strong>
                                            </p>
                                        </div>
                                    </div>

                                    <div class="d-flex w-100 mb-0 mt-3">
                                        <div style="margin-right: auto" class="d-flex">
                                            <i class="fa fa-money" style="color: #0d6efd; margin-top: 3px" aria-hidden="true"></i>
                                            <p style="margin-left: 8px; font-weight: 400; color: #62646a">
                                                Budget
                                            </p>
                                        </div>
                                        <div>
                                            <p style="color: #62646a">
                                                <strong style="font-weight: 500">$@Model.Project.Budget</strong>
                                            </p>
                                        </div>
                                    </div>

                                    <div class="d-flex w-100 mb-0 mt-3">
                                        <div style="margin-right: auto" class="d-flex">
                                            <i class="fa fa-clock-o" style="color: #0d6efd; margin-top: 3px" aria-hidden="true"></i>
                                            <p style="margin-left: 8px; font-weight: 400; color: #62646a">
                                                Project Time
                                            </p>
                                        </div>
                                        <div>
                                            <p style="color: #62646a">
                                                <strong style="font-weight: 500">@Model.Project.ProjectTime</strong>
                                            </p>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="profile_details mt-3" style="padding: 20px 20px 5px 20px">
                            <h5>Description</h5>
                            <p>@Model.Project.Description</p>

                            <div class="d-flex w-100 mb-0 mt-3">
                                <div style="margin-right: auto" class="d-flex">
                                    <i class="fa fa-calendar" style="color: #0d6efd; margin-top: 3px" aria-hidden="true"></i>
                                    <p style="margin-left: 8px; font-weight: 400; color: #62646a">
                                        Posted on
                                    </p>
                                </div>
                                <div>
                                    <p style="color: #62646a">
                                        <strong style="font-weight: 500">@String.Format("{0:m}", Model.Project.PostingDate)</strong>
                                    </p>
                                </div>
                            </div>

                            <div class="d-flex w-100 mb-0 mt-3">
                                <div style="margin-right: auto" class="d-flex">
                                    <i class="fa fa-calendar" style="color: #0d6efd; margin-top: 3px" aria-hidden="true"></i>
                                    <p style="margin-left: 8px; font-weight: 400; color: #62646a">
                                        Last Date
                                    </p>
                                </div>
                                <div>
                                    <p style="color: #62646a">
                                        <strong style="font-weight: 500">
                                            @String.Format("{0:m}",
                                            Model.Project.BidEndDate)
                                        </strong>
                                    </p>
                                </div>
                            </div>
                        </div>
                        @if (ViewBag.UserType == "Freelancer")
                        {
                            <a asp-controller="Bid" asp-action="Create" asp-route-id=@Model.Project.ProjectId id="button_disable" class="btn btn-primary w-100 mt-3">Place Bid</a>
                        }
                    </div>
                    <div class="col-8">
                        <h5 class="mb-4">Previous Bids</h5>
                        @foreach (var item in Model.BidFreelancerList.BidFreelancerModel)
                        {
                        <div style="width: 100%">
                            <div class="bid_row">
                                <div class="profile_img_container" style="flex: 0 0 60px">
                                    <img src="~/uploads/@item.Freelancer.ProfileImageName" class="profile_image" />
                                </div>
                                    <div style="flex: 6 0 0px">
                                        <h6 class="mb-0" style="color: #0d6efd">@item.Freelancer.FreelancerName</h6>
                                        <p style="font-size: 14px; font-weight: 500" class="mt-0 mb-0">@item.Freelancer.Category</p>
                                        <p>India</p>
                                        <div class="d-flex justify-content-between">
                                            <p><span style="font-weight: 700">$@item.Bid.BidAmount</span> / hr</p>
                                                @if (ViewBag.UserType == "Client")
                                                {
                                                    <p><span style="font-weight: 700">$@item.Freelancer.Wallet</span> earned</p>
                                                }
                                        </div>
                                        <div class="d-flex">
                                            <i class="fa fa-envelope" style="color: #0d6efd; margin-right: 10px; margin-top: 4px" aria-hidden="true"></i>
                                            <p>@String.Format("{0:m}", item.Bid.BidDate)</p>
                                        </div>
                                            @if (ViewBag.UserType == "Client") {
                                                <p style="margin-bottom: 0;"><span style="font-weight: 600">Cover Letter</span> - @item.Bid.CoverLetter</p>
                                            }
                                     </div>
                                @if (ViewBag.UserType == "Client") {
                                    <div style="flex: 1 0 0px">
                                        <a asp-controller="Payment" asp-action="Index" asp-route-freelancerId=@item.Freelancer.FreelancerId class="btn btn-primary" style="border-radius: 100px !important; width: 80px !important">Hire</a>
                                    </div>
                                }
                                @if (ViewBag.UserId == @item.Freelancer.FreelancerId)
                                {
                                    <div style="flex: 1 0 0px">
                                        <a asp-controller="Bid" asp-action="Edit" asp-route-id=@ViewBag.BidId class="btn btn-primary" style="border-radius: 100px !important; width: 80px !important">Edit</a>
                                    </div>
                                }
                            </div>
                            <hr>
                        </div>
                        }
                    </div>
                </div>
            </section>
        </main>
    </div>

