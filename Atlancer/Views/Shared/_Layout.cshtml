            <img class="footer_img v-100" src="~/images/logo-01-01.png" />
        </div>
        <ul class="footer_items text-center">
            <li class="footer_item mb-3"><a asp-controller="Home" asp-action="Index" class="footer_link link-light">Home</a></li>
            <li class="footer_item mb-3"><a asp-controller="Home" asp-action="Index" class="footer_link link-light">Contact</a></li>
        </ul>
        <div class="d-flex align-items-center justify-content-lg-around mb-5">
            <a class="footer_social_link"><i class="fa fa-facebook" aria-hidden="true"></i></a>
            <a class="footer_social_link"><i class="fa fa-instagram" aria-hidden="true"></i></a>
            <a class="footer_social_link"><i class="fa fa-twitter" aria-hidden="true"></i></a>
        </div>
        <p class="text-center link-light">Copyright © Atlancer 2022</p>
    </footer>
    -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
<script>
</script>
</html>
