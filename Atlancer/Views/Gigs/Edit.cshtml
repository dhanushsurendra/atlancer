@model Gigs

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Freelancer | Atlancer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;1,100&display=swap"
        rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Atlancer.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white">
            <div class="container-fluid" style="max-width: 1320px">
                <div class="w-100 d-flex justify-content-between align-items-center">
                    <img class="img-fluid p-3" width="200px" src="~/images/logo-01-01.png" />

                    <div class="d-flex align-items-center">

                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                    asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                    asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>

                        <!--Search input field-->

                        <div class="Icon-inside">
                            <input type="text" placeholder="Search" class="search-input">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </div>


                        <div class="d-flex align-items-center">
                            @if (ViewBag.UserType == "Freelancer")
                            {
                                <a style="display: flex; text-decoration: none" asp-controller="Freelancer"
                                asp-action="Index" asp-route-id=@ViewBag.UserId>
                                    <img src="~/images/avatar.png" alt="Avatar" class="avatar" />
                                    <p style="color: #000; font-weight: 500" class="align-self-center mb-0 pr-1">
                                        @ViewBag.UserName
                                    </p>
                                </a>
                            }
                            else
                            {
                                <a style="display: flex; text-decoration: none" asp-controller="Client" asp-action="Index"
                                asp-route-id=@ViewBag.UserId>
                                    <img src="~/images/avatar.png" alt="Avatar" class="avatar" />
                                    <p style="color: #000; font-weight: 500" class="align-self-center mb-0 pr-1">
                                        @ViewBag.UserName
                                    </p>
                                </a>
                            }
                        </div>
                    </div>
                </div>

                <!--
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            -->
            </div>
        </nav>
        <hr style="width: 1320px; margin: auto" class="text-center" />

        <div class="mt-3" style="display: block; margin: auto">
            <ul class="d-flex footer_items justify-content-center">
                <li><a asp-controller="" asp-action="" class="p-2 services_link">Development & IT</a></li>
                <li><a href="" class="p-2 services_link">Design & Creative</a></li>
                <li><a href="" class="p-2 services_link">Sales & Marketing</a></li>
                <li><a href="" class="p-2 services_link">Writing & Translation</a></li>
                <li><a href="" class="p-2 services_link">Engineering & Architecture</a></li>

            </ul>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <section class="section gigs_section">
                <div class="container d-flex flex-column align-items-center justify-content-center gigs_container">

                    <form action="" method="POST" enctype="multipart/form-data">
                        <div class="form-outline mb-4">
                            <h3 class="mb-5" style="align-self: flex-start;">
                                Create a Gig
                            </h3>
                        </div>
                        <div class="form-outline mb-4">
                            <label style="font-weight: 600" class="form-label" for="title" asp-for="Title">Title</label>
                            <input asp-for="Title" type="text" class="form-control form-control-lg" />
                            <span asp-validation-for="Title" class="text-danger"></span>

                        </div>
                        <div class="form-outline mb-4">
                            <label style="font-weight: 600" class="form-label" for="description"
                                asp-for="Description">Description</label>
                            <textarea style="resize: none" type="text" class="form-control form-control-lg" rows="10"
                                cols="50" asp-for="Description"></textarea>

                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4">
                            <label style="font-weight: 600" class="form-label">Delivery Time</label>
                            <select asp-for="DeliveryTime" class="form-control" name="DeliveryTime" id="orders"
                                style="background: #fff; padding: 11px">
                                <option value="1 day Delivery" selected>1 day Delivery</option>
                                <option value="2 days Delivery">2 days Delivery</option>
                                <option value="3 days Delivery">3 days Delivery</option>
                                <option value="4 days Delivery">4 days Delivery</option>
                                <option value="5 days Delivery">5 days Delivery</option>
                                <option value="6 days Delivery">6 days Delivery</option>
                                <option value="7 days Delivery">7 days Delivery</option>
                                <option value="10 days Delivery">10 day Delivery</option>
                                <option value="14 days Delivery">14 days Delivery</option>
                                <option value="21 days Delivery">21 days Delivery</option>
                                <option value="30 days Delivery">30 day Delivery</option>
                                <option value="45 days Delivery">45 days Delivery</option>
                                <option value="60 days Delivery">60 days Delivery</option>
                                <option value="75 days Delivery">75 days Delivery</option>
                                <option value="90 days Delivery">90 days Delivery</option>
                            </select>
                        </div>
                        <div class="form-outline mb-4">
                            <label asp-for="Price" style="font-weight: 600" class="form-label" for="price">Price</label>
                            <input asp-for="Price" type="number" class="form-control form-control-lg" />
                            <span asp-validation-for="Price" class="text-danger"></span>

                        </div>
                        <div class="form-outline mb-4">
                            <label style="font-weight: 600" class="form-label" for="price">Images</label>
                            <div class="d-flex">
                                <div class="picture-container" style="margin-right: 15px">
                                    <div class="picture d-flex flex-column align-items-center justify-content-center"
                                        id="image_container1">
                                        <div style="width: 120px; height:90px" class="mb-2">
                                            <img src="~/uploads/@Model.GigImageName1"
                                                style="object-fit: cover; width: 100%; height: 100%" id="image1"
                                                class="mb-3" />
                                        </div>
                                        <p style="color: #0d6efd; font-weight: 500; font-size: 14px" class="m-0">Upload a Photo</p>
                                        <input accept="image/*" asp-for="GigImage1"
                                            onchange="previewImage(event, 'image1');" type="file" id="wizard-picture"
                                            class="" />
                                    </div>
                                </div>
                                <div class="picture-container" style="margin-right: 15px">
                                    <div class="picture d-flex flex-column align-items-center justify-content-center"
                                        id="image_container1">
                                        <div style="width: 120px; height:90px" class="mb-2">
                                            <img src="~/uploads/@Model.GigImageName2"
                                                style="object-fit: cover; width: 100%; height: 100%" id="image2"
                                                class="mb-3" />
                                        </div>
                                        <p style="color: #0d6efd; font-weight: 500; font-size: 14px" class="m-0">Upload
                                            a Photo
                                        </p>
                                        <input accept="image/*" asp-for="GigImage2"
                                            onchange="previewImage(event, 'image2');" type="file" id="wizard-picture"
                                            class="" />
                                    </div>
                                </div>
                                <div class="picture-container">
                                    <div class="picture d-flex flex-column align-items-center justify-content-center"
                                        id="image_container1">
                                        <div style="width: 120px; height:90px" class="mb-2">
                                            <img src="~/uploads/@Model.GigImageName3"
                                                style="object-fit: cover; width: 100%; height: 100%" id="image3"
                                                class="mb-3" />
                                        </div>
                                        <p style="color: #0d6efd; font-weight: 500; font-size: 14px" class="m-0">Upload
                                            a Photo
                                        </p>
                                        <input accept="image/*" asp-for="GigImage3"
                                            onchange="previewImage(event, 'image3');" type="file" id="wizard-picture"
                                            class="" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 text-end">
                            <button style="width: 20%;" type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </section>
        </main>
    </div>

</body>
<script>
    const previewImage = (event, id) => {

        const imageFiles = event.target.files;
        const imageFilesLength = imageFiles.length;
        if (imageFilesLength > 0) {
            // Get the image path.
            const imageSrc = URL.createObjectURL(imageFiles[0]);

            // Select the image preview element
            document.getElementById(id).src = imageSrc;
        }
    };
</script>

</html>