@model Project

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Project | Atlancer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;1,100&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container-fluid" style="max-width: 1320px">
                <div class="w-100 d-flex justify-content-between align-items-center">
                    <img class="img-fluid p-3" width="200px" src="~/images/logo-01-01.png" />

                    <div class="d-flex align-items-center">

                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                    asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                    asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>

                        <!--Search input field-->

                        <div class="Icon-inside">
                            <input type="text" placeholder="Search" class="search-input">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </div>


                        <div class="d-flex align-items-center">
                            @if (ViewBag.UserType == "Freelancer") {
                            <a style="display: flex; text-decoration: none" asp-controller="Freelancer"
                                asp-action="Index" asp-route-id=@ViewBag.UserId>
                                <img src="~/images/avatar.png" alt="Avatar" class="avatar" />
                                <p style="color: #000; font-weight: 500" class="align-self-center mb-0 pr-1">
                                    @ViewBag.UserName</p>
                            </a>
                            } else {
                            <a style="display: flex; text-decoration: none" asp-controller="Client" asp-action="Index"
                                asp-route-id=@ViewBag.UserId>
                                <img src="~/images/avatar.png" alt="Avatar" class="avatar" />
                                <p style="color: #000; font-weight: 500" class="align-self-center mb-0 pr-1">
                                    @ViewBag.UserName</p>
                            </a>
                            }
                        </div>
                    </div>
                </div>

                <!--
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                -->
            </div>
        </nav>
        <hr style="width: 1320px; margin: auto" class="text-center" />

        <div class="mt-3" style="display: block; margin: auto">
            <ul class="d-flex footer_items justify-content-center">
                <li><a asp-controller="" asp-action="" class="p-2 services_link">Development & IT</a></li>
                <li><a href="" class="p-2 services_link">Design & Creative</a></li>
                <li><a href="" class="p-2 services_link">Sales & Marketing</a></li>
                <li><a href="" class="p-2 services_link">Writing & Translation</a></li>
                <li><a href="" class="p-2 services_link">Engineering & Architecture</a></li>

            </ul>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">

            <section class="section gigs_section">
                <div class="container d-flex flex-column align-items-center justify-content-center gigs_container">

                    <form action="" method="POST">
                        <div class="form-outline mb-4">
                            <h3 class="mb-5" style="align-self: flex-start;">
                                Create a Project
                            </h3>
                        </div>
                        <div class="form-outline mb-4">
                            <label style="font-weight: 600" class="form-label" for="title" asp-for="ProjectName">Title</label>
                            <input type="text" asp-for="ProjectName" class="form-control form-control-lg" />
                            <span asp-validation-for="ProjectName" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4">
                            <label style="font-weight: 600" class="form-label" asp-for="Description"
                                for="description">Description</label>
                            <textarea asp-for="Description" style="resize: none" type="text"
                                class="form-control form-control-lg" rows="10" cols="50"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <label style="font-weight: 600" class="form-label">Category</label>
                            <select asp-for="Category" class="form-control" name="category" id="orders"
                                style="background: #fff; padding: 11px">
                                <option value="Graphics and Design">Graphics and Design</option>
                                <option value="Video and Animation">Video and Animation</option>
                                <option value="Programing and Tech">Programing and Tech</option>
                                <option value="Writing and Translation">Writing and Translation</option>
                                <option value="Music and Audio">Music and Audio</option>
                            </select>
                        </div>

                        <div class="form-outline mb-4">
                            <label style="font-weight: 600" class="form-label" for="time"
                                asp-for="ProjectTime">Project Time</label>
                            <br />
                            <select asp-for="ProjectTime" class="form-control" name="ProjectTime" id="orders" style="background: #fff; padding: 11px">
                                <option value="1 day Delivery" selected>1 day Delivery</option>
                                <option value="2 days Delivery">2 days Delivery</option>
                                <option value="3 days Delivery">3 days Delivery</option>
                                <option value="4 days Delivery">4 days Delivery</option>
                                <option value="5 days Delivery">5 days Delivery</option>
                                <option value="6 days Delivery">6 days Delivery</option>
                                <option value="7 days Delivery">7 days Delivery</option>
                                <option value="10 days Delivery">10 day Delivery</option>
                                <option value="14 days Delivery">14 days Delivery</option>
                                <option value="21 days Delivery">21 days Delivery</option>
                                <option value="30 days Delivery">30 day Delivery</option>
                                <option value="45 days Delivery">45 days Delivery</option>
                                <option value="60 days Delivery">60 days Delivery</option>
                                <option value="75 days Delivery">75 days Delivery</option>
                                <option value="90 days Delivery">90 days Delivery</option>
                            </select>
                        </div>
                        <div class="form-outline mb-4">
                            <label style="font-weight: 600" class="form-label" asp-for="Budget">Budget</label>
                            <input type="number" class="form-control form-control-lg" asp-for="Budget" />
                            <span asp-validation-for="Budget" class="text-danger"></span>

                        </div>
                        <div class="col-md-12 text-end">
                            <button style="width: 20%;" type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </section>
        </main>
    </div>
</body>

</html>