@model ProjectViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Freelancer | Atlancer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;1,100&display=swap"
        rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Atlancer.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white">
            <div class="container-fluid" style="max-width: 1320px">
                <div class="w-100 d-flex justify-content-between align-items-center">
                    <img class="img-fluid p-3" width="200px" src="~/images/logo-01-01.png" />

                    <div class="d-flex align-items-center">

                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                    asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                    asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>

                        <!--Search input field-->

                        <div class="Icon-inside">
                            <input type="text" placeholder="Search" class="search-input">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </div>


                        <div class="d-flex align-items-center">
                            @if (ViewBag.UserType == "Freelancer")
                            {
                                <a style="display: flex; text-decoration: none" asp-controller="Freelancer"
                                asp-action="Index" asp-route-id=@ViewBag.UserId>
                                    <img src="~/images/avatar.png" alt="Avatar" class="avatar" />
                                    <p style="color: #000; font-weight: 500" class="align-self-center mb-0 pr-1">
                                        @ViewBag.UserName
                                    </p>
                                </a>
                            }
                            else
                            {
                                <a style="display: flex; text-decoration: none" asp-controller="Client" asp-action="Index"
                                asp-route-id=@ViewBag.UserId>
                                    <img src="~/images/avatar.png" alt="Avatar" class="avatar" />
                                    <p style="color: #000; font-weight: 500" class="align-self-center mb-0 pr-1">
                                        @ViewBag.UserName
                                    </p>
                                </a>
                            }
                        </div>
                    </div>
                </div>

                <!--
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                -->
            </div>
        </nav>
        <hr style="width: 1320px; margin: auto" class="text-center" />

        <div class="mt-3" style="display: block; margin: auto">
            <ul class="d-flex footer_items justify-content-center">
                <li><a asp-controller="" asp-action="" class="p-2 services_link">Development & IT</a></li>
                <li><a href="" class="p-2 services_link">Design & Creative</a></li>
                <li><a href="" class="p-2 services_link">Sales & Marketing</a></li>
                <li><a href="" class="p-2 services_link">Writing & Translation</a></li>
                <li><a href="" class="p-2 services_link">Engineering & Architecture</a></li>

            </ul>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="section">
                <div class="container d-lg-flex align-items-start justify-content-center">
                    <div class="box-1 bg-light user" style="padding-bottom: 0; padding-top: 20px">
                        <div class="d-flex align-items-center mb-3" style="height: 40px">
                            <img src="~/uploads/@Model.Freelancer.ProfileImageName"
                                class="rounded-circle" alt="" width="40px" height="40px">
                            <div class="mt-3 w-100">
                                <p class="ps-2 mt-0 name" style="font-size: 14px">@Model.Freelancer.FreelancerName</p>
                            </div>
                        </div>
                        <div class="box-inner-1 pb-3 mb-3 ">
                            <div class="d-flex justify-content-between mb-3 userdetails">
                                <p class="fw-bold">@Model.Project.ProjectName</p>
                                <p><span class="fas fa-dollar-sign fw-normal"></span>@Model.Project.Category</p>
                            </div>
                            <div id="my" class="carousel slide carousel-fade img-details" data-bs-ride="carousel"
                                data-bs-interval="2000">
                                <div class="carousel-indicators">
                                    <button type="button" data-bs-target="#my" data-bs-slide-to="0" class="active"
                                        aria-current="true" aria-label="Slide 1"></button>
                                    <button type="button" data-bs-target="#my" data-bs-slide-to="1"
                                        aria-label="Slide 2"></button>
                                    <button type="button" data-bs-target="#my" data-bs-slide-to="2"
                                        aria-label="Slide 3"></button>
                                </div>
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="~/uploads/@Model.Gig.GigImageName1"
                                            class="d-block w-100">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/uploads/@Model.Gig.GigImageName2"
                                            class="d-block w-100">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/uploads/@Model.Gig.GigImageName3"
                                            class="d-block w-100 h-100" style="object-fit: cover">
                                    </div>
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#my"
                                    data-bs-slide="prev">
                                    <div class="icon">
                                        <span class="fa fa-angle-left"></span>
                                    </div>
                                    <span class="visually-hidden">Previous</span>
                                </button>

                                <button class="carousel-control-next" type="button" data-bs-target="#my"
                                    data-bs-slide="next">
                                    <div class="icon">
                                        <span class="fa fa-angle-right"></span>
                                    </div>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                            <p style="font-size: 16px; margin-top : 16px">
                                @Model.Gig.Description
                            </p>

                            <div class="d-flex w-100">
                                <div style="margin-right: auto" class="d-flex">
                                    <i class="fa fa-money" style="color: #0d6efd; margin-top: 1px" aria-hidden="true"></i>
                                    <p style="margin-left: 8px; font-weight: 400; color: #62646a; font-size: 14px">
                                        Average Gig Price
                                    </p>
                                </div>
                                <div>
                                    <p style="color: #62646a">
                                        <strong style="font-weight: 600">@Model.Gig.Price</strong>
                                    </p>
                                </div>
                            </div>

                            <div class="d-flex w-100">
                                <div style="margin-right: auto" class="d-flex">
                                    <i class="fa fa-clock-o" style="color: #0d6efd; margin-top: 1px" aria-hidden="true"></i>
                                    <p style="margin-left: 8px; font-weight: 400; color: #62646a; font-size: 14px">
                                        Average Delivery Time
                                    </p>
                                </div>
                                <div>
                                    <p style="color: #62646a">
                                        <strong style="font-weight: 600">@Model.Gig.DeliveryTime</strong>
                                    </p>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="box-2">
                        <div class="box-inner-2">
                            <div>
                                <p class="fw-bold">Payment Details</p>
                                <p class="dis mb-3">Complete your purchase by providing your payment details</p>
                            </div>
                            <form method="post">
                                <div class="cardname">
                                    <div class="form-outline mb-3">
                                        <label style="font-weight: 600" class="form-label" for="title">Cardholder Name</label>
                                        <input type="text" class="form-control form-control-lg" />
                                        <span class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="form-outline mb-2">
                                        <label style="font-weight: 600" class="form-label" for="title">Email Address</label>
                                        <input type="text" class="form-control form-control-lg" />
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="form-outline mb-2">
                                        <label style="font-weight: 600" class="form-label" for="title">Card Number</label>
                                        <input type="text" min="16" max="16" class="form-control form-control-lg" />
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                                <div>
                                    <div class="d-flex" style="gap: 10px">
                                        <div class="form-outline mb-3" style="flex: 1 0 50%">
                                            <label style="font-weight: 600" class="form-label" for="title">Expiry Date</label>
                                            <input type="date" id="setDate" class="form-control form-control-lg" />
                                            <span class="text-danger"></span>

                                        </div>
                                        <div class="form-outline mb-3">
                                            <label style="font-weight: 600" class="form-label" for="title">CVV</label>
                                            <input type="password" maxlength="3" class="form-control form-control-lg" />
                                            <span class="text-danger"></span>

                                        </div>
                                    </div>
                                    <div class="address">
                                        <div class="d-flex" style="gap: 10px">
                                            <div class="form-outline mb-2" style="flex: 1 0 50%">
                                                <label style="font-weight: 600" class="form-label" for="title">Zip</label>
                                                <input type="number" maxlength="6" class="form-control form-control-lg" />
                                                <span class="text-danger"></span>
                                            </div>
                                            <div class="form-outline mb-2">
                                                <label style="font-weight: 600" class="form-label" for="title">State</label>
                                                <input type="text" class="form-control form-control-lg" />
                                                <span class="text-danger"></span>

                                            </div>
                                        </div>
                                        <div class="d-flex flex-column dis">
                                            <div class="mt-3 d-flex align-items-center justify-content-between mb-2">
                                                <p style="font-size: 16px" class="fw-bold">Total</p>
                                                <p style="font-size: 16px" class="fw-bold"><span class="fas fa-dollar-sign"></span>$@Model.Bid.BidAmount</p>
                                            </div>
                                            <button class="btn btn-primary mt-2">
                                                Pay<span class="fas fa-dollar-sign px-1"></span>$@Model.Bid.BidAmount
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
     <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        var date = document.getElementById("setDate")
        var today = new Date();
        var dd = today.getDate();
        var mm = today.getMonth() + 1;
        var yyyy = today.getFullYear();

        if (dd < 10) {
            dd = '0' + dd;
        }

        if (mm < 10) {
            mm = '0' + mm;
        }

        today = yyyy + '-' + mm + '-' + dd;

        date.setAttribute("min", today)
    </script>
</body>

</html>