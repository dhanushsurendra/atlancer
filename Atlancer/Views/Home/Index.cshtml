@model IEnumerable<Project>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home - Atlancer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;1,100&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container-fluid" style="max-width: 1320px">
                <div class="w-100 d-flex justify-content-between align-items-center">
                    <img class="img-fluid p-3" width="200px" src="~/images/logo-01-01.png" />

                    <div class="d-flex align-items-center">

                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>

                        <!--Search input field-->

                        <div class="Icon-inside">
                            <input type="text" placeholder="Search" class="search-input">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </div>


                        <div class="d-flex align-items-center">
                            @if (ViewBag.UserType == "Freelancer") {
                                <a style="display: flex; text-decoration: none" asp-controller="Freelancer" asp-action="Index" asp-route-id=@ViewBag.UserId>
                                <img src="~/images/avatar.png" alt="Avatar" class="avatar" />
                                <p style="color: #000; font-weight: 500" class="align-self-center mb-0 pr-1">@ViewBag.UserName</p>
                                </a>
                            } else {
                                <a style="display: flex; text-decoration: none" asp-controller="Client" asp-action="Index" asp-route-id=@ViewBag.UserId>
                                    <img src="~/images/avatar.png" alt="Avatar" class="avatar" />
                                    <p style="color: #000; font-weight: 500" class="align-self-center mb-0 pr-1">@ViewBag.UserName</p>
                                </a>
                            }
                        </div>
                    </div>
                </div>

                <!--
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                -->
            </div>
        </nav>
        <hr style="width: 1320px; margin: auto" class="text-center" />

        <div class="mt-3" style="display: block; margin: auto">
            <ul class="d-flex footer_items justify-content-center">
                <li><a asp-controller="" asp-action="" class="p-2 services_link">Development & IT</a></li>
                <li><a href="" class="p-2 services_link">Design & Creative</a></li>
                <li><a href="" class="p-2 services_link">Sales & Marketing</a></li>
                <li><a href="" class="p-2 services_link">Writing & Translation</a></li>
                <li><a href="" class="p-2 services_link">Engineering & Architecture</a></li>

            </ul>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <section class="container home section">
                <div class="row">
                    <div class="col-6">
                        <h1 class="text_primary">How <span>work</span><br /> should work</h1>
                        <h4 class="text_secondary">
                            Forget the old rules. You can have the best people. <br />
                            Right now. Right here.
                        </h4>
                        <a class="button btn-blue">Find Work</a>
                    </div>
                    <div class="col-6 text-center">
                        <img style="max-width: 500px" src="~/images/hero-01.png" />
                    </div>
                </div>

                <div class="categories section">
                    <h2>
                        Browse talent by category
                    </h2>
                    <p>Looking for work? <a asp-controller="" asp-action="">Browse jobs</a></p>
                    <div class="row" style="margin-top: 30px !important">

                        <div class="col-3 mb-3">
                            <div class="card w-100" style="background-color: rgba(13, 110, 253, .08); border: none; outline: none">
                                <div class="card-body">
                                    <div class="display: inline-block">
                                        <h4 style="color: #000" class="text-start category_heading">Development & IT</h4>
                                    </div>
                                    <div class="d-flex mt-3">
                                        <div class="d-flex w-50">
                                            <div style="color: #0d6efd; margin-right: 5px">
                                                <i class="fa fa-star" aria-hidden="true"></i>
                                            </div>
                                            <p>4.85/5</p>
                                        </div>
                                        <div class="w-50">
                                            <p>1,853 skills</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                         <div class="col-3 mb-3">
                            <div class="card w-100" style="background-color: rgba(13, 110, 253, .08); border: none; outline: none">
                                <div class="card-body">
                                    <div class="display: inline-block">
                                        <h4 style="color: #000" class="text-start category_heading">Development & IT</h4>
                                    </div>
                                    <div class="d-flex mt-3">
                                        <div class="d-flex w-50">
                                            <div style="color: #0d6efd; margin-right: 5px">
                                                <i class="fa fa-star" aria-hidden="true"></i>
                                            </div>
                                            <p>4.85/5</p>
                                        </div>
                                        <div class="w-50">
                                            <p>1,853 skills</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                         <div class="col-3 mb-3">
                            <div class="card w-100" style="background-color: rgba(13, 110, 253, .08); border: none; outline: none">
                                <div class="card-body">
                                    <div class="display: inline-block">
                                        <h4 style="color: #000" class="text-start category_heading">Development & IT</h4>
                                    </div>
                                    <div class="d-flex mt-3">
                                        <div class="d-flex w-50">
                                            <div style="color: #0d6efd; margin-right: 5px">
                                                <i class="fa fa-star" aria-hidden="true"></i>
                                            </div>
                                            <p>4.85/5</p>
                                        </div>
                                        <div class="w-50">
                                            <p>1,853 skills</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                         <div class="col-3 mb-3">
                            <div class="card w-100" style="background-color: rgba(13, 110, 253, .08); border: none; outline: none">
                                <div class="card-body">
                                    <div class="display: inline-block">
                                        <h4 style="color: #000" class="text-start category_heading">Development & IT</h4>
                                    </div>
                                    <div class="d-flex mt-3">
                                        <div class="d-flex w-50">
                                            <div style="color: #0d6efd; margin-right: 5px">
                                                <i class="fa fa-star" aria-hidden="true"></i>
                                            </div>
                                            <p>4.85/5</p>
                                        </div>
                                        <div class="w-50">
                                            <p>1,853 skills</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div>
                    <h2>
                        Browse Project
                    </h2>
                    <p>Looking for projects to work on?</p>

                    <div class="row" style="margin-top: 30px !important">
                        @foreach (var item in Model)
                        {
                            <div class="col-3 mb-3">
                                <div class="card w-100">
                                    <div class="card-body">
                                        <p class="card-title" style="font-size: 20px; font-weight: 500; margin-bottom: 10px">@item.ProjectName</p>
                                        <div class="d-flex w-100 align-content-center justify-content-between">
                                            <h6 class="card-subtitle mb-2 text-muted">$@item.Budget</h6>
                                            <h6 class="card-subtitle mb-2 text-muted">@String.Format("{0:m}", item.BidEndDate)</h6>
                                        </div>

                                        <div class="d-flex w-100">
                                            <div style="margin-right: auto" class="d-flex mt-2">
                                                <i class="fa fa-list-ul" style="color: #0d6efd" aria-hidden="true"></i>
                                                <h6 style="margin-left: 10px; margin-top: .5px;" class="card-subtitle text-muted">
                                                    @item.Category
                                                </h6>
                                            </div>
                                        </div>

                                        <div class="d-flex w-100">
                                            <div style="margin-right: auto" class="d-flex mt-4">
                                                <i class="fa fa-clock-o" style="color: #0d6efd" aria-hidden="true"></i>
                                                <h6 style="margin-left: 10px; margin-top: .5px" class="card-subtitle text-muted">
                                                    @item.ProjectTime
                                                </h6>
                                            </div>
                                        </div>
                                        <a asp-controller="Bid" asp-action="Index" asp-route-id=@item.ProjectId class="btn mt-4" style="background-color: rgba(13, 110, 253, .05); color: #0d6efd">Explore</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </section>
        </main>
    </div>

